<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="TBnull">
    <item name="android:windowNoTitle">true</item>
	</style>
	
    <style name="FDAtheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/FDActionBar</item>
    </style>

    <style name="FDActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#33b5e5</item>
        <item name="android:titleTextStyle">@style/FDActionBar.Text</item>
    </style>
    
    <style name="FDActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    

</resources>
